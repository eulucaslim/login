{
  "compilerOptions": {                                
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,                               
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,        
    "allowSyntheticDefaultImports": true,        
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}